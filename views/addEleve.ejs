<%- include('header') %>

    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>ASIMOV</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.5.0/semantic.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" type="text/css" href="/styles/styleAfterMenu.css">
    </head>

    <body>
        <h1 class="d-flex justify-content-left">Ajouter élève</h1>
        <hr>
        <p><br></p>

        <div class="d-flex justify-content-space-evenly">

            <div class="container d-flex flex-column text-center w-75 h-25 p-5 fondBoutons menuMENU">
                <div class="input-group d-flex w-50 mx-auto">
                    <form action="/addEleve" method="post">
                        <div class="input-group">
                            <label for="prof_nom"></label>
                            <span class="input-group-text" id="">Nom : </span>
                            <input type="text" class="form-control" name="el_nom" id="el_nom" required>

                            <!-- Ajout de l'espace -->
                            <div class="m-2"></div>

                            <label for="prof_prenom"></label>
                            <span class="input-group-text" id="">Prénom : </span>
                            <input type="text" class="form-control" name="el_prenom" id="el_prenom" required>
                        </div>

                        <div class="input-group w-75 p-3 mx-auto">
                            <label for="listeclasses"></label>
                            <span class="input-group-text" id="">Sélectionnez une classe : </span>
                            <select id="listeclasses" name="el_idClasse" required>
                                <% dataListeClasses.forEach(function(classes) { %>
                                    <option value="<%= classes.cl_id %>">
                                        <%= classes.cl_nom %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>

                        <div class="input-group w-50 p-3 mx-auto">
                            <label for="prof_mdp"></label>
                            <span class="input-group-text" id="">Mot de passe : </span>
                            <input type="password" class="form-control" name="el_mdp" id="el_mdp" required>
                        </div>

                </div>
                <hr>

                <div class="text-center">
                    <button type="submit"
                        class="btn w-25 btn-square-xl button1 btn btn-light btn-lg btn-block">Confirmer</button>
                </div>
                </form>
            </div>
        </div>

    </body>

    </html>