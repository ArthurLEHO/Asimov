<%- include('headerDirection') %>

  <html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ASIMOV</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.5.0/semantic.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/styles/styleAfterMenu.css">
  </head>

  <body>
    <h1 class="d-flex justify-content-left">Modifier professeur</h1>
    <hr>
    <p><br></p>

    <div class="d-flex justify-content-space-evenly">

      <div class="container d-flex flex-column text-center w-75 h-25 p-5 fondBoutons menuMENU">
        <% dataProf.forEach(function(prof) { %>
          <form action="/modifierProfs/<%=prof.ps_id%>" method="post">
            <div class="input-group d-flex w-50 mx-auto">
              <div class="input-group">
                <label for="prof_nom"></label>
                <span class="input-group-text" id="">Nom : </span>
                <input type="text" class="form-control" name="prof_nom" id="prof_nom" value="<%=prof.ps_nom%>" required>

                <div class="m-2"></div>

                <label for="prof_prenom"></label>
                <span class="input-group-text" id="">Prénom : </span>
                <input type="text" class="form-control" name="prof_prenom" id="prof_prenom" value="<%=prof.ps_prenom%>"
                  required>
              </div>

              <div class="input-group w-50 p-3 mx-auto">
                <label for="prof_mdp"></label>
                <span class="input-group-text" id="">Mot de passe : </span>
                <input type="password" class="form-control" name="prof_mdp" id="prof_mdp" value="<%=prof.ps_motdepasse%>"
                  required>
              </div>

              <div class="input-group">
                <label for="listematieres"></label>
                <span class="input-group-text" id="">Sélectionnez une matière : </span>
                <select id="listematieres" name="listematieres" required>
                  <% dataListeMatieres.forEach(function(matiere) { %>
                    <option value="<%= matiere.mt_id %>">
                      <%= matiere.mt_nom %>
                    </option>
                    <% })%>
                </select>
              </div>
            </div>
            <hr>
            <% })%>
              <div class="text-center">
                <button type="submit"
                  class="btn w-25 btn-square-xl button1 btn btn-light btn-lg btn-block">Confirmer</button>
              </div>
          </form>

      </div>
    </div>

  </body>

  </html>