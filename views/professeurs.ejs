<%- include('header') %>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>ASIMOV</title>
    </head>

    <body>
        <table class="table text-center">
            <thead class="thead-dark">
                <tr>
                    <th class="bg-dark text-white" scope="col">Nom</th>
                    <th class="bg-dark text-white" scope="col">Prénom</th>
                    <th class="bg-dark text-white" scope="col">Matière</th>
                    <th class="bg-dark text-white" scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% dataProfesseur.forEach((data, index)=>{%>
                    <tr id=<%=data.ps_id%>>
                        <td>
                            <%=data.ps_nom%>
                        </td>
                        <td>
                            <%=data.ps_prenom%>
                        </td>
                        <td>
                            <%=data.mt_nom%>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="http://localhost:3000/modifierProfs/<%=data.ps_id%>"><button type="button"
                                        class="btn btn-secondary">Modifier</button></a>
                                <a href="http://localhost:3000/supprimerProfs/<%=data.ps_id%>"><button type="button"
                                        class="btn btn-danger">Supprimer</button></a>
                            </div>
                        </td>
                    </tr>
                    <%})%>
            </tbody>
        </table>
    </body>

    </html>
    <%- include('footer') %>