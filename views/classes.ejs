<%- include('header') %>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>ASIMOV</title>
    </head>

    <body>
        <table class="table text-center">
            <thead class="thead-dark">
                <tr>
                    <th class="bg-dark text-white" scope="col">Classe</th>
                    <th class="bg-dark text-white" scope="col">Professeur Principal</th>
                    <th class="bg-dark text-white" scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% dataListeClasses.forEach((classe, index)=>{%>
                    <tr id=<%=classe.cl_id%>>
                        <td>
                            <%=classe.cl_nom%>
                        </td>
                        <td>
                            <%=classe.ps_nom%>
                                <%=classe.ps_prenom%>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="http://localhost:3000/modifierClasses/<%=classe.cl_id%>"><button type="button"
                                        class="btn btn-secondary">Modifier</button></a>
                                <a href="http://localhost:3000/supprimerClasses/<%=classe.cl_id%>"><button type="button"
                                        class="btn btn-danger">Supprimer</button></a>
                            </div>
                        </td>
                    </tr>
                    <%})%>
            </tbody>
        </table>
    </body>

    </html>
    <%- include('footer') %>