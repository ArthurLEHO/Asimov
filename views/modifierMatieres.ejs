<%- include('header') %>

    <html lang="en">

    <head>
        <link rel="stylesheet" type="text/css" href="/styles/styleAfterMenu.css">
    </head>

    <body>
        <h1 class="d-flex justify-content-left">Modifier matière</h1>
        <hr>
        <p><br></p>

        <div class="d-flex justify-content-space-evenly">
            <div class="container d-flex flex-column text-center w-50 h-50 p-5 fondBoutons menuMENU">
                <% dataMatiere.forEach(function(matiere) { %>
                    <form action="/modifierMatieres/<%=matiere.mt_id%>" method="post">
                        <div class="input-group d-flex w-50 mx-auto">
                            <span class="input-group-text" id="">Matière : </span>
                            <input type="text" class="form-control" name="nom" id="nom" value="<%=matiere.mt_nom%>" required>
                        </div>
                        <hr>
                        <% })%>
                            <div class="text-center">
                                <button type="submit"
                                    class="btn w-25 btn-square-xl button1 btn btn-light btn-lg btn-block">Confirmer</button>
                            </div>
                    </form>
            </div>
        </div>

    </body>

    </html>

    <%- include('footer') %>