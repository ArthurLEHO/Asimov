<%- include('header') %>

    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>ASIMOV</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.5.0/semantic.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" type="text/css" href="/styles/styleAfterMenu.css">
    </head>

    <body>
        <h1 class="d-flex justify-content-left">Modifier des notes</h1>
        <hr>
        <p><br></p>

        <div class="d-flex justify-content-space-evenly">
            <div class="container d-flex flex-column text-center w-75 h-25 p-5 fondBoutons menuMENU">
                <% dataNote.forEach(function(note) { %>
                    <form action="/modifierNotes/:nt_id" method="post">
                        <div class="input-group d-flex p-3 w-50 mx-auto">
                            <label for="listeEleves"></label>
                            <span class="input-group-text" id="">Élève : </span>
                            <select id="listeEleves" name="idEleve" required>
                                <option value="<%= note.el_id %>">
                                    <%= note.el_nom%>
                                        <%= note.el_prenom %>
                                </option>
                            </select>

                            <!-- Ajout de l'espace -->
                            <div class="m-2"></div>

                            <label for="listematieres"></label>
                            <span class="input-group-text" id="">Matière : </span>
                            <select id="listematieres" name="idMatiere" required>
                                <option value="<%= note.mt_id %>">
                                    <%= note.mt_nom %>
                                </option>
                            </select>
                        </div>
                        <hr>

                        <div class="input-group d-flex p-3 w-50 mx-auto">
                            <label for=""></label>
                            <span class="input-group-text" id="">Date : </span>
                            <input type="date" class="form-control" name="nt_date" id="nt_date"
                                value="<%= note.nt_date %>" required>

                            <!-- Ajout de l'espace -->
                            <div class="m-2"></div>

                            <label for=""></label>
                            <span class="input-group-text" id="">Note élève : </span>
                            <input type="text" class="form-control" name="nt_resultat" id="nt_resultat"
                                value="<%= note.nt_resultat %>" required>
                        </div>
                        <% }); %>
                            <div class="m-3"></div>

                            <div class="text-center">
                                <button type="submit"
                                    class="btn w-25 btn-square-xl button1 btn btn-light btn-lg btn-block">Confirmer</button>
                            </div>
                    </form>
            </div>
        </div>

    </body>

    </html>